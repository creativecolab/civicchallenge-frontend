    "webpack-manifest-plugin": "^1.1.0"
  },
  "engines": {
    "node": "7.8.0"
  },
  "ava": {
    "files": [
      "client/**/*.spec.js"
    ],
    "source": [
      "client/**/*.js"
    ],
    "failFast": true,
    "babel": "inherit",
    "require": [
      "./setup-test-env.js"
    ]
  }
}
