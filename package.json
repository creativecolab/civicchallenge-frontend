{
  "name": "civicchallenge-website",
  "version": "1.0.0",
  "description": "Built with the Mongo-Express-React-Node.js stack. Super WIP, name TBD.",
  "scripts": {
    "/* Prod Scripts */": "",
    "heroku-postbuild": "npm run build:all",
    "start": "cross-env NODE_ENV=production node index.js",
    "/* Dev Scripts */": "",
    "dev": "cross-env BABEL_DISABLE_CACHE=1 DEBUG=server:* NODE_ENV=development nodemon index.js",
    "start:stage": "cross-env DEBUG=server:* NODE_ENV=production node index.js",
    "/* Build Scripts */": "",
    "build:client": "cross-env NODE_ENV=production webpack --progress --profile --colors --config webpack.config.prod.js",
    "build:server": "cross-env BABEL_DISABLE_CACHE=1 NODE_ENV=production webpack --progress --profile --colors --config webpack.config.server.js",
    "build:all": "npm run build:client; npm run build:server",
    "/* Cleanup Scripts */": "",
    "clean:dist": "npm run clean:dist:server; npm run clean:dist:client",
    "clean:dist:server": "rimraf server-dist",
    "clean:dist:client": "rimraf client-dist",
    "clean:report": "rimraf bundle-report",
    "clean:all": "npm run clean:dist && npm run clean:report",
    "/* Convenience Scripts */": "",
    "reinstall": "rimraf node_modules && npm run",
    "rebuild": "npm run clean:all; npm run build:all",
    "/* Lint + Test Scripts */": "",
    "lint": "eslint --ext .js --ext .jsx client server",
    "lint:webpack": "eslint --no-ignore webpack-modules webpack.config.babel.js webpack.config.dev.js webpack.config.prod.js webpack.config.server.js",
    "lint:all": "npm run lint; npm run lint:webpack"
  },
  "repository": "git@github.com:davidcluu/mern-custom.git",
  "author": "David Luu <luu.david.c@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "babel-core": "^6.24.0",
    "body-parser": "^1.17.1",
    "client-sessions": "^0.7.0",
    "compression": "^1.6.2",
    "cross-env": "^3.2.4",
    "debug": "^2.6.3",
    "es6-promise": "^4.1.0",
    "express": "^4.15.2",
    "gsap": "^1.19.1",
    "helmet": "^3.5.0",
    "html-minifier": "^3.4.2",
    "isomorphic-fetch": "^2.2.1",
    "lusca": "^1.4.1",
    "react": "^15.4.2",
    "react-addons-transition-group": "^15.4.2",
    "react-dom": "^15.4.2",
    "react-helmet": "^5.0.0",
    "react-hot-loader": "^3.0.0-beta.2",
    "react-redux": "^5.0.3",
    "react-router": "^3.0.0",
    "redux": "^3.6.0",
    "redux-thunk": "^2.2.0",
    "serve-static": "^1.12.1",
    "uglify-js": "^2.8.15"
  },
  "devDependencies": {
    "babel-eslint": "^7.2.1",
    "babel-loader": "^6.4.1",
    "babel-plugin-webpack-loaders": "^0.9.0",
    "babel-polyfill": "^6.23.0",
    "babel-preset-env": "^1.2.2",
    "babel-preset-es2015": "^6.24.0",
    "babel-preset-es2015-native-modules": "^6.9.4",
    "babel-preset-react": "^6.23.0",
    "babel-preset-react-optimize": "^1.0.1",
    "babel-preset-stage-0": "^6.22.0",
    "babel-register": "^6.24.0",
    "chunk-manifest-webpack-plugin": "^1.0.0",
    "css-loader": "^0.27.3",
    "eslint": "^3.18.0",
    "eslint-config-airbnb": "^14.1.0",
    "eslint-friendly-formatter": "^2.0.7",
    "eslint-loader": "^1.7.0",
    "eslint-plugin-compat": "^1.0.2",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^4.0.0",
    "eslint-plugin-react": "^6.10.3",
    "eventsource-polyfill": "^0.9.6",
    "extract-text-webpack-plugin": "^2.1.0",
    "file-loader": "^0.10.1",
    "friendly-errors-webpack-plugin": "^1.6.1",
    "node-sass": "^4.5.1",
    "nodemon": "^1.11.0",
