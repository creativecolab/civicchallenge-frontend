{
  "presets": [
    [ "env", { "modules": false } ],
    "es2015",
    "react",
    "stage-0"
  ],
  "plugins": [
    "react-hot-loader/babel",
    [
      "transform-runtime", {
        "helpers": false,
        "polyfill": false,
        "regenerator": true,
        "moduleName": "babel-runtime"
      }
    ]
  ],
  "env": {
    "production": {
      "presets": [
        [ "env", { "modules": false } ],
        "es2015",
        "react-optimize",
        "react",
        "stage-0"
      ]
    }
  }
}
